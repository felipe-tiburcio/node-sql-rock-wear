<main>
  <div class="container">
    <div class="row">
      <div class="col-6 offset-3">

        {{#if isDone}}
          <div class="alert alert-success">
            Product saved!
          </div>
        {{/if}}

        {{#if isUpdated}}
          <div class="alert alert-warning">
            Product updated!
          </div>
        {{/if}}

        {{#if isRemoved}}
          <div class="alert alert-success">
            Product removed!
          </div>
        {{/if}}

        {{#if isError}}
          <div class="alert alert-danger">
            Something get wrong... please try again
          </div>
        {{/if}}

        <form action="/save" method="post" enctype="multipart/form-data">
          <input
            type="text"
            name="name"
            class="form-control"
            placeholder="Name"
          />
          <input
            type="number"
            name="price"
            class="form-control"
            placeholder="Price"
          />
          <input type="file" name="image" class="form-control" id="" />
          <input type="submit" class="col-12 btn btn-primary" value="Save" />
        </form>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">

      {{#each products}}

        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card">
            <img
              src="img/{{image}}"
              alt="rock band t-shirt"
              class="img-aspect-ratio"
            />
            <div class="description">
              <p>{{name}}</p>
              <p>${{price}}</p>
            </div>
            <a href="/update/{{id}}" class="btn btn-warning">Update</a>
            <a href="/remove/{{id}}&{{image}}" class="btn btn-danger">Remove</a>
          </div>
        </div>

      {{/each}}

    </div>
  </div>
</main>