<main>
  <div class="container">
    <div class="row">
      <div class="col-6 offset-3">
        <form action="/save" method="post" enctype="multipart/form-data">
          <input
            type="text"
            name="name"
            class="form-control"
            placeholder="Name"
          />
          <input
            type="number"
            name="price"
            class="form-control"
            placeholder="Price"
          />
          <input type="file" name="image" class="form-control" id="" />
          <input type="submit" class="col-12 btn btn-primary" value="Save" />
        </form>
      </div>
    </div>
  </div>
</main>